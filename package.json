{
	"devDependencies": {
		"markdownlint": "^0.31.1",
		"markdownlint-cli": "^0.37.0"
	},
	"scripts": {
		"lint:md": "command -v markdownlint >/dev/null && markdownlint ${@:2} || npx markdownlint ${@:2}",
		"fix:md": "command -v markdownlint >/dev/null && markdownlint --fix ${@:2} || npx markdownlint --fix ${@:2}"
	}
}
